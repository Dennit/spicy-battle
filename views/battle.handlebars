<!doctype html>
<html lang="en">

<head>
	<!-- Required meta tags -->
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">

	<!-- Bootstrap CSS -->
	<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"
		integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
	<link rel="stylesheet" href="/css/spicy.css">

	<title>Spicy Battle</title>
</head>

<body>
			<div class="container">

				<h1 class="title_header">BATTLE</h1>


				<div class="window_frame">
					<div class="window">

						<img class="monster_battle_placement" src="/images/monster-2.png"/>
						<div class="progress monster-hp">
							<div id="monster_hp" class="progress-bar hp_bar" role="progressbar" style="width: 100%" aria-valuenow="25"
								aria-valuemin="0" aria-valuemax="100"></div>
						</div>
						<img class="character_battle_placement" src="/images/character-battle.png"/>
					</div>
				</div>

				{{#pushups}}
				<div class="row">

					<div class="col-6 text-center" style="margin: 0 auto; margin-top: 10px">
						<button style="width: 160px; margin-top: 10px; font-size: 12px; text-transform: uppercase"
						type="button" onclick="location.href='/PushUps';"
						class="btn btn-dark btn-lg exercise-button">{{exerciseName}} <span class="badge badge-secondary">{{repetitions}}</span>
					</button>
					</div>
				{{/pushups}}
				{{#situps}}


					<div class="col-6 text-center" id={{id}} style="margin: 0 auto; margin-top: 10px">
						<button style="width: 160px; margin-top: 10px; font-size: 12px; text-transform: uppercase"
						type="button" onclick="location.href='/SitUps';"
						class="btn btn-dark btn-lg exercise-button">{{exerciseName}} <span class="badge badge-secondary">{{repetitions}}</span>
					</button>

					</div>
				</div>
				{{/situps}}
				{{#jumpingjacks}}
				<div class="row">

					<div class="col-6 text-center" id={{id}} style="margin: 0 auto; margin-top: 10px">
						<button style="width: 160px; margin-top: 10px; font-size: 12px; text-transform: uppercase"
						type="button" onclick="location.href='/JumpingJacks';"
						class="btn btn-dark btn-lg exercise-button">{{exerciseName}} <span class="badge badge-secondary">{{repetitions}}</span>
						</button>
					</div>



				{{/jumpingjacks}}
				{{#squats}}

					<div class="col-6 text-center" id={{id}} style="margin: 0 auto; margin-top: 10px">
						<button style="width: 160px; margin-top: 10px; font-size: 12px; text-transform: uppercase"
						type="button" onclick="location.href='/Squats';"
						class="btn btn-dark btn-lg exercise-button">{{exerciseName}} <span class="badge badge-secondary">{{repetitions}}</span>
						</button>
					</div>
				</div>
				{{/squats}}
				<div >
					<div class="run-button-container" style="text-align: center;">
						<button style="width: 100px; margin-top: 10px; font-size: 10px; text-transform: uppercase"
						type="button" onclick="location.href='/index';"
						class="btn btn-dark btn-lg exercise-button">RUN AWAY</button>
					</div>
				</div>

			</div>

	<!-- Optional JavaScript -->
	<!-- jQuery first, then Popper.js, then Bootstrap JS -->
	<script src="https://code.jquery.com/jquery-3.4.1.slim.min.js"
		integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n"
		crossorigin="anonymous"></script>
	<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"
		integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo"
		crossorigin="anonymous"></script>
	<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"
		integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6"
		crossorigin="anonymous"></script>
	<script src="https://code.jquery.com/jquery.js"></script>
	<script src="/js/fight.js"></script>
	<script src="/js/battle.js"></script>
</body>

</html>
