<!doctype html>
<html lang="en">

<head>
	<!-- Required meta tags -->
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">

	<!-- Bootstrap CSS -->
	<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"
		integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
	<link rel="stylesheet" href="/css/spicy.css">

	<title>Spicy Battle</title>
</head>

<body>
			<div class="container">

				<h1 class="title_header">BATTLE</h1>

						<div class="progress" style="width: 250px; margin-bottom: -10px;">
							<div id="monster_hp" class="progress-bar hp_bar" role="progressbar" style="width: 50%" aria-valuenow="25"
								aria-valuemin="0" aria-valuemax="100"></div>
						</div>

				<div class="window">
					<img src="/images/battle_window.png"/>
				</div>

				<div style="text-align: left">
					<div class="progress" style="width: 180px; margin-top: -10px;">
						<div id="your_hp" class="progress-bar hp_bar" role="progressbar" style="width: 25%" aria-valuenow="25"
							aria-valuemin="0" aria-valuemax="100"></div>
					</div>
				</div>
				{{#pushups}}
				<div class="row">

					<div class="col-6 text-center" style="margin: 0 auto; margin-top: 10px">
						<button style="width: 150px; margin-top: 10px; font-size: 15px"
						type="button" onclick="dealDamagePushUps()"
						class="btn btn-dark btn-lg exercise-button">{{exerciseName}} <span class="badge badge-secondary">{{repetitions}}</span>
					</button>
					</div>

				</div>
				{{/pushups}}
				{{#situps}}
				<div class="row">

					<div class="col-6 text-center" id={{id}} style="margin: 0 auto; margin-top: 10px">
						<button style="width: 150px; margin-top: 10px; font-size: 15px"
						type="button" onclick="dealDamageSitUps()"
						class="btn btn-dark btn-lg exercise-button">{{exerciseName}} <span class="badge badge-secondary">{{repetitions}}</span>
					</button>
					</div>

				</div>
				{{/situps}}
				{{#jumpingjacks}}
				<div class="row">

					<div class="col-6 text-center" id={{id}} style="margin: 0 auto; margin-top: 10px">
						<button style="width: 150px; margin-top: 10px; font-size: 15px"
						type="button" onclick="dealDamageJumpingJacks()"
						class="btn btn-dark btn-lg exercise-button">{{exerciseName}} <span class="badge badge-secondary">{{repetitions}}</span>
					</button>
					</div>

				</div>
				{{/jumpingjacks}}
				{{#squats}}
				<div class="row">

					<div class="col-6 text-center" id={{id}} style="margin: 0 auto; margin-top: 10px">
						<button style="width: 150px; margin-top: 10px; font-size: 15px"
						type="button" onclick="dealDamageSquats()"
						class="btn btn-dark btn-lg exercise-button">{{exerciseName}} <span class="badge badge-secondary">{{repetitions}}</span>
					</button>
					</div>

				</div>
				{{/squats}}
				<div >
					<div class="run-button-container" style="text-align: center;">
						<button style="width: 75px; margin-top: 10px; font-size: 10px"
						type="button" onclick="location.href='/index';"
						class="btn btn-dark btn-lg run-button">RUN AWAY</button>
					</div>
				</div>

			</div>

	<!-- Optional JavaScript -->
	<!-- jQuery first, then Popper.js, then Bootstrap JS -->
	<script src="https://code.jquery.com/jquery-3.4.1.slim.min.js"
		integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n"
		crossorigin="anonymous"></script>
	<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"
		integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo"
		crossorigin="anonymous"></script>
	<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"
		integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6"
		crossorigin="anonymous"></script>
	<script src="https://code.jquery.com/jquery.js"></script>
	<script src="/js/fight.js"></script>
	<script src="/js/battle.js"></script>
</body>

</html>
